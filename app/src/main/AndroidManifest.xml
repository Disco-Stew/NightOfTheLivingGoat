<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.threeLeggedGoat.nightOfTheLivingGoat" >

    <application
        android:allowBackup="true"
        android:largeHeap="true"
		android:installLocation="auto"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.threeLeggedGoat.nightOfTheLivingGoat.MainMenu"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.threeLeggedGoat.nightOfTheLivingGoat.GameEngine"
            android:label="@string/app_name"
            android:parentActivityName="com.threeLeggedGoat.nightOfTheLivingGoat.MainMenu"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.threeLeggedGoat.nightOfTheLivingGoat.MainMenu" />
        </activity>

    </application>

</manifest>
